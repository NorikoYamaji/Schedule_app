 <h1>スケジュール編集</h1>

    <% if flash[:notice] %>
        <div class="flash flash_error">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <%= form_with model: @post do |f| %>
        <% @post.errors.full_messages.each do |message| %>
            <%= message %><br>
        <% end %>

        <table>
            <tr>
                <th>タイトル</th>
                <td><%= f.text_field :title %></td>
            </tr>
            <tr>    
                <th>開始日</th>
                <td><%= f.date_field :start_day %></td>
            </tr>
            <tr>
                <th>終了日</th>
                <td><%= f.date_field :end_day %></td>
            </tr>
            <tr>
                <th>終日</th>
                <td><%= f.check_box :all_day %><br>終日の場合はチェックを入れます。</td>
            </tr>
            <tr>
                <th>メモ</th>
                <td><%= f.text_area :memo %></td>
            </tr>

        </table>   

    <ul>
        <li>
            <%= f.submit "スケジュールを編集する" %>
        </li>

        <li>
            <%= link_to "スケジュール一覧に戻る", :posts %>
        </li>

    </ul>

    <% end %>
